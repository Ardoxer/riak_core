{erl_first_files, [
    "src/gen_nb_server.erl",
    "src/riak_core_broadcast_handler.erl",
    "src/riak_core_gen_server.erl",
    "src/riak_core_stat_xform"
]}.

{eunit_first_files, [
    "src/gen_nb_server.erl",
    "src/riak_core_broadcast_handler.erl",
    "src/riak_core_gen_server",
    "src/riak_core_stat_xform"
]}.

{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform},
    {platform_define, "^[0-9]+", namespaced_types},
    {platform_define, "^R15", old_hash}
]}.

{edoc_opts, [
    {preprocess, true},
    {macros, [{edoc, true}]}
]}.

{cover_enabled, true}.
{eunit_opts, [verbose]}.

{xref_checks, [
%   deprecated_function_calls,
%   deprecated_functions,
    locals_not_used,
    undefined_function_calls,
    undefined_functions
]}.
{xref_queries, [
    {"(XC - UC) || (XU - X - B - \"(cluster_info|dtrace)\" : Mod)", []}
]}.

{deps, [
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "master"}}},
    {basho_stats, ".*", {git, "git://github.com/basho/basho_stats.git", {branch, "develop"}}},
    {cluster_info, ".*", {git, "git://github.com/basho/cluster_info.git", {branch, "develop"}}},
    {riak_sysmon, ".*", {git, "git://github.com/basho/riak_sysmon.git", {branch, "develop"}}},
    {eleveldb, ".*", {git, "git://github.com/basho/eleveldb.git", {branch, "2.0"}}},
    {riak_ensemble, ".*", {git, "git://github.com/basho/riak_ensemble", {branch, "develop"}}},
    {pbkdf2, ".*", {git, "git://github.com/basho/erlang-pbkdf2.git", {branch, "master"}}},
    {exometer_core, ".*", {git, "git://github.com/basho/exometer_core.git", {branch, "master"}}},
    {clique, ".*", {git, "git://github.com/basho/clique.git", {branch, "develop"}}}
]}.
