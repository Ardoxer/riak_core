{erl_first_files, [
    "src/gen_nb_server.erl",
    "src/riak_core_gen_server.erl",
	"src/riak_core_stat_xform"
]}.
{cover_enabled, true}.
{erl_opts, [
    debug_info,
    warnings_as_errors,
    {parse_transform, lager_transform},
    {platform_define, "^[1-9][0-9]+", namespaced_types},
    {platform_define, "^R15", "old_hash"}
]}.
{edoc_opts, [{preprocess, true}]}.
{eunit_opts, [verbose]}.
{xref_checks, []}.
{xref_queries, [{"(XC - UC) || (XU - X - B - \"(cluster_info|dtrace)\" : Mod)", []}]}.

{deps, [
    {basho_stats, ".*", {git, "git://github.com/basho/basho_stats.git", {branch, "develop"}}},
    {clique, ".*", {git, "git://github.com/basho/clique.git", {branch, "feature/otp-17"}}},
    {eleveldb, ".*", {git, "git://github.com/basho/eleveldb.git", {branch, "feature/otp-17"}}},
    {exometer_core, ".*", {git, "git://github.com/basho/exometer_core.git", {branch, "feature/otp-17"}}},
    {lager, ".*", {git, "git://github.com/basho/lager.git", {branch, "feature/otp-17"}}},
    {otp_compat, ".*", {git, "git://github.com/tburghart/otp_compat.git", {branch, "master"}}},
    {pbkdf2, ".*", {git, "git://github.com/basho/erlang-pbkdf2.git", {branch, "master"}}},
    {poolboy, ".*", {git, "git://github.com/basho/poolboy.git", {branch, "feature/otp-17"}}},
    {riak_ensemble, ".*", {git, "git://github.com/basho/riak_ensemble.git", {branch, "feature/otp-17"}}},
    {riak_sysmon, ".*", {git, "git://github.com/basho/riak_sysmon.git", {branch, "feature/otp-17"}}}
]}.
